<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff">

    <RelativeLayout
        android:id="@+id/relativeLayout6"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:layout_centerVertical="true"
         android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/title"
            android:layout_width="200dp"
            android:layout_height="wrap_content"

              android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/view5"
            android:layout_toRightOf="@+id/view5"
            android:lines="1"
            android:text="@string/app_name"
            android:layout_marginTop="10dp"
            android:layout_centerVertical="true"
            android:textSize="16sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/CakePrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_marginEnd="29dp"
            android:layout_marginRight="29dp"
            android:layout_toLeftOf="@+id/increase"
            android:layout_toStartOf="@+id/increase"
            android:gravity="center"
            android:text="600"
            android:layout_centerVertical="true"
            android:textColor="@color/album_title"
            android:textSize="16sp"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/increase"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/edit_quantity1"
            android:layout_toStartOf="@+id/edit_quantity1"
            android:background="#fff"
            android:src="@drawable/add"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/decrease"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/remove"
            android:visibility="visible" />

        <TextView
            android:id="@+id/multiply"
            android:layout_width="16dp"
            android:layout_height="23dp"
             android:layout_alignLeft="@+id/increase"
            android:layout_alignStart="@+id/increase"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:text="X"
            android:textColor="#000"
            android:textSize="14sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/edit_quantity1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/increase"
            android:layout_marginEnd="6dp"
            android:layout_marginRight="6dp"
            android:layout_toLeftOf="@+id/decrease"
            android:layout_toStartOf="@+id/decrease"
            android:text="14"
            android:layout_centerVertical="true"
            android:textColor="@color/colorAccent"
            android:textSize="16sp"
            android:visibility="visible" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="11.9dp"
            android:layout_alignParentTop="true"
            android:background="#ff00ddff"
            android:id="@+id/view5" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/relativeLayout6"
        android:background="#898888" />

</RelativeLayout>
